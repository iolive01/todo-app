extends layout

block content
  h1 What do you need to do today?
  div(class='checkbox' ng-repeat='todo in todos' ng-click='deleteTodo(todo._id)')
    label
      input(type='checkbox')
      | {{todo.text}}

  p form data (test): {{formData}}

  form(ng-submit='createTodo()')
    div.form-group
      label(for='name') Todo Item
      input#name.form-control(type='text' placeholder='what do you need to do?' ng-model='formData')
      button.btn.btn-primary(type='submit') Record your todo